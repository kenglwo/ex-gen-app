{
	"env": {
		"browser": true,
		"node": true,
		"jquery": true,
		"es6": true
	},
	"parserOptions": {
			"ecmaVersion": 2017
	},
	"extends": [
		"eslint:recommended",
		"plugin:node/recommended",
		"plugin:prettier/recommended"
	],
	"globals": {
		"d3": false,
		"_": false
	},
	"rules": {
		"no-console": "off",
		"no-extra-semi": "warn",
		"quotes": ["warn", "single"],
		"node/no-unpublished-require": "off",
		"prettier/prettier": [
			"error",
			{
			  "singleQuote": true,
			  "trailingComma": "es5",
			  "useTabs": true,
			  "tabwidth": 4
			}
		  ],
		"indent": [
			1,
			"tab"
		]
	}
}

